<Window x:Class="Clair.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clair"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Icon="assets/icons/icon.ico"
        Title="Settings" Height="720" Width="1024">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="110*"/>
            <ColumnDefinition Width="519*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.Column="1" Fill="#080808"/>
        <Rectangle Grid.Column="0" Fill="Black"/>


        <Label Foreground="#FFF" Background="#040404"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Content="Home" FontSize="14"
               x:Name="homeButton"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Cursor="Hand"
               Height="60" Width="178" MouseLeftButtonDown="homeButton_MouseLeftButtonDown"/>
        <Label Foreground="#FFF" Background="#040404"
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Content="Music Downloader" FontSize="14"
               x:Name="downloaderButton"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Cursor="Hand"
               Height="60" Width="178" Margin="0,60,0,0" MouseLeftButtonDown="downloaderButton_MouseLeftButtonDown"/>
        <Label Foreground="#FFF" Background="#040404        "
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               Content="About" FontSize="14"
               x:Name="aboutButton"
               HorizontalAlignment="Left" VerticalAlignment="Top"
               Cursor="Hand"
               Height="60" Width="178" MouseLeftButtonDown="aboutButton_MouseLeftButtonDown" Margin="0,120,0,0"/>

        <Grid Visibility="Visible" Grid.Column="1" Name="homeGrid">
            <CheckBox x:Name="autoShuffleCheckbox"
                      Foreground="#FFF" Content="Auto-Shuffle Playlist"
                      Margin="50,85,586,576" Checked="autoShuffleCheckbox_Checked" 
                      Unchecked="autoShuffleCheckbox_Unchecked" />
            <CheckBox x:Name="enableExtensionsCheckbox" 
                      Foreground="#FFF" Content="Enable Unsupported extensions" 
                      Margin="50,120,586,541" Checked="enableExtensionsCheckbox_Checked" Unchecked="enableExtensionsCheckbox_Unchecked" />
            <CheckBox x:Name="checkUpdatesCheckbox" 
                      Foreground="#FFF" Content="Check for Updates" 
                      Margin="50,50,586,611" Checked="checkUpdatesCheckbox_Checked" Unchecked="checkUpdatesCheckbox_Unchecked" />
        </Grid>
        <Grid Visibility="Hidden" Grid.Column="1" Name="downloaderGrid">
            <TextBlock Foreground="#FFF" FontSize="24" Text="Music Downloader" Height="32" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
            <TextBox x:Name="downloaderTitleField" Style="{StaticResource searchboxStyle}"
                     HorizontalAlignment="Center" VerticalAlignment="Top"
                     Margin="0,135,0,0" FontSize="14" 
                     TextAlignment="Center" 
                     Width="300" Height="30"
                     KeyDown="downloaderTitleField_KeyDown"/>
            <TextBlock Foreground="#FFF" FontSize="16" 
                       Height="auto"
                       HorizontalAlignment="Left" VerticalAlignment="Top"
                       TextWrapping="Wrap"
                       Margin="50,200,5,0">
                Here you can find how it works: 
                <Hyperlink 
                    Foreground="#eb345f" RequestNavigate="Hyperlink_RequestNavigate" 
                    NavigateUri="https://github.com/ritiek/spotify-downloader/blob/master/README.md">
                    Spotdl Readme.md (Python)
                </Hyperlink>
            </TextBlock>
        </Grid>
        <Grid Visibility="Hidden" Grid.Column="1" Name="aboutGrid">
            <TextBlock Foreground="#FFF" FontSize="24" Text="About" Height="32" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0"/>
            <TextBlock Foreground="#FFF" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="50,100,50,0">
                Author: L0um15 <LineBreak />
                Project Version: pre-5.0 <LineBreak />
                Project Website: <Hyperlink 
                    Foreground="#eb345f" RequestNavigate="Hyperlink_RequestNavigate" 
                    NavigateUri="https://github.com/L0um15/Clair-Musicplayer/">
                    Clair Musicplayer Home Website
                </Hyperlink> <LineBreak />
                 Spotify Downloader by ritiek (spotdl): <Hyperlink 
                    Foreground="#eb345f" RequestNavigate="Hyperlink_RequestNavigate" 
                    NavigateUri="https://github.com/ritiek/spotify-downloader">
                    Spotdl Home Website (Python)
                </Hyperlink>



            </TextBlock>
        </Grid>


    </Grid>
</Window>